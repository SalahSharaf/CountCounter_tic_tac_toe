<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/appbackgroundgradiant"
    tools:context="com.example.android.countcounter.MainActivity">
<RelativeLayout     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/w1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/player_x"
            android:textColor="@color/colorXPinkPrimary"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:id="@+id/playerXcount"
            android:textColor="@color/colorXPinkPrimaryDark"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:onClick="mainMenu"
        android:id="@+id/w1"
        android:layout_marginLeft="30dp"
        android:background="@drawable/buttongradiant"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/w1"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_o"
            android:textColor="@color/colorOPurplePrimary"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:id="@+id/playerOcount"
            android:textColor="@color/colorOPurplePrimaryDark"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:contentDescription="0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

            <Button
                android:id="@+id/b2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

            <Button
                android:id="@+id/b3"
                android:contentDescription="2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b4"
                android:layout_width="90dp"
                android:contentDescription="3"
                android:layout_height="90dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

            <Button
                android:id="@+id/b5"
                android:contentDescription="4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

            <Button
                android:id="@+id/b6"
                android:contentDescription="5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="6"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

            <Button
                android:id="@+id/b8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="7"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

            <Button
                android:id="@+id/b9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="8"
                android:background="@drawable/buttongradiant"
                android:onClick="Add" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/winning"
        app:cardCornerRadius="20dp"
        android:visibility="invisible"
        android:id="@+id/menu"
        app:contentPadding="@dimen/cardview_compat_inset_shadow"
        app:cardElevation="20dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/winningbackground"
            android:background="@drawable/winning"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/Winnerplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:text="Player X is the Winner "
            android:textAlignment="center"
            android:textSize="35dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/buttongradiant"
                android:onClick="rematch"
                android:text="Rematch" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/buttongradiant"
                android:onClick="mainMenu"
                android:text="Main Menu" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</FrameLayout>
