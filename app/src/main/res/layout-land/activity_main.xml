<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackgroundgradiant"
    tools:context="com.example.android.countcounter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/w1"
            android:layout_marginLeft="@dimen/teams_land_margin_left"
            android:layout_marginTop="@dimen/teams_land_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/player_x"
                android:textColor="@color/colorXPinkPrimary"
                android:textSize="@dimen/teams_text_size" />

            <TextView
                android:id="@+id/playerXcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorXPinkPrimaryDark"
                android:textSize="@dimen/teams_text_size" />

        </LinearLayout>

        <Button
            android:id="@+id/w1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/teams_land_margin_left"
            android:layout_marginTop="@dimen/main_menu_land_margin_top"
            android:background="@drawable/buttongradiant"
            android:onClick="mainMenu"
            android:text="Main Menu" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/w1"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/teams_land_margin_left"
            android:layout_marginTop="@dimen/teams_land_margin_top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_o"
                android:textColor="@color/colorOPurplePrimary"
                android:textSize="@dimen/teams_text_size" />

            <TextView
                android:id="@+id/playerOcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorOPurplePrimaryDark"
                android:textSize="@dimen/teams_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/initial_padding">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="0"
                    android:onClick="Add" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="1"
                    android:onClick="Add" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="2"
                    android:onClick="Add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/initial_padding">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="3"
                    android:onClick="Add" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="4"
                    android:onClick="Add" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="5"
                    android:onClick="Add" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/initial_padding">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="6"
                    android:onClick="Add" />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="7"
                    android:onClick="Add" />

                <Button
                    android:id="@+id/b9"
                    android:layout_width="@dimen/buttons_land_width"
                    android:layout_height="@dimen/buttons_land_height"
                    android:background="@drawable/buttongradiant"
                    android:contentDescription="8"
                    android:onClick="Add" />

            </LinearLayout>

        </LinearLayout>

