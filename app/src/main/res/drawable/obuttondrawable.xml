<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:endColor="@color/colorOPurplePrimaryDark" android:gradientRadius="20%p" android:startColor="@color/colorOPurplePrimary" android:type="radial" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_active="true">
        <shape>
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient android:endColor="@color/colorOPurplePrimaryDark" android:gradientRadius="20%p" android:startColor="@color/colorOPurplePrimaryLight" android:type="radial" />
                <corners android:radius="10dp"/>
            </shape>
        </shape>
    </item>
</selector>